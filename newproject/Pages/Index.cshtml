@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container align-content-between">
    <div class="row">
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    <div class="row">
        <form method="post">
            <label for="nombreUsuario">
                Ingrese su nombre de usuario:
                <input type="text" id="nombreUsuario" asp-for="nombreUsuario" placeholder="fulanito..." required/>
            </label>
            <label asp-for="apellido">
                Ingrese su apellido:
                <input type="text" id="apellido" asp-for="apellido" placeholder="fulanita..." required />
            </label>
            <button type="submit">submit</button>
        </form>
    </div>
    <div class="row">
            <h1>Tu nombre ingreso: @Model.nombreUsuario</h1>
            <h1>Tu apellido ingreso: @Model.apellido</h1>
    </div>
    </div>

</div>